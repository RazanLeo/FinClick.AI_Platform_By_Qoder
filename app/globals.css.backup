@tailwind base;
@tailwind components;
@tailwind utilities;

* {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

html,
body {
  max-width: 100vw;
  overflow-x: hidden;
  background: #000000;
  color: #ffffff;
}

body {
  color: rgb(var(--foreground-rgb));
  background: linear-gradient(
      to bottom,
      transparent,
      rgb(var(--background-end-rgb))
    )
    rgb(var(--background-start-rgb));
}

a {
  color: inherit;
  text-decoration: none;
}

:root {
  --foreground-rgb: 255, 255, 255;
  --background-start-rgb: 0, 0, 0;
  --background-end-rgb: 0, 0, 0;
}

/* Language Support CSS */
.lang-ar {
  direction: rtl;
}

.lang-en {
  direction: ltr;
}

.dir-rtl {
  direction: rtl;
}

.dir-ltr {
  direction: ltr;
}

/* Font Support */
.font-arabic {
  font-family: 'Cairo', 'Tajawal', 'Noto Sans Arabic', sans-serif;
}

.font-latin {
  font-family: 'Inter', 'Roboto', sans-serif;
}

/* RTL/LTR specific adjustments - only for navigation, not all flex elements */
.lang-ar .nav-flex {
  flex-direction: row-reverse;
}

.lang-en .nav-flex {
  flex-direction: row;
}

/* Remove the global text alignment forcing - preserve existing text-center classes */
/* .lang-ar .text-left {
  text-align: right !important;
}

.lang-en .text-right {
  text-align: left !important;
} */

/* Margin and padding adjustments for RTL */
.lang-ar .ml-auto {
  margin-left: 0;
  margin-right: auto;
}

.lang-ar .mr-auto {
  margin-right: 0;
  margin-left: auto;
}

.lang-ar .pl-4 {
  padding-left: 0;
  padding-right: 1rem;
}

.lang-ar .pr-4 {
  padding-right: 0;
  padding-left: 1rem;
}

/* Language transition effects */
.language-transition {
  transition: all 0.3s ease-in-out;
}

/* FinClick.AI Custom Styles */
.animate-pulse-gold {
  animation: pulse-gold 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

@keyframes pulse-gold {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
    filter: drop-shadow(0 0 10px #FFD700);
  }
  50% {
    opacity: 0.8;
    transform: scale(1.02);
    filter: drop-shadow(0 0 20px #FFD700);
  }
}

/* Golden Coin Logo Styling */
.finclick-logo {
  background: transparent !important;
  border-radius: 50%;
  box-shadow: 0 0 20px rgba(255, 215, 0, 0.4), 
              0 0 40px rgba(255, 215, 0, 0.2),
              inset 0 0 20px rgba(255, 215, 0, 0.1);
  transition: all 0.3s ease;
  filter: brightness(1.1) contrast(1.2) hue-rotate(15deg);
}

.finclick-logo:hover {
  transform: scale(1.05) rotate(5deg);
  box-shadow: 0 0 30px rgba(255, 215, 0, 0.6), 
              0 0 60px rgba(255, 215, 0, 0.3),
              inset 0 0 30px rgba(255, 215, 0, 0.2);
  filter: brightness(1.3) contrast(1.3) hue-rotate(10deg);
}

/* Remove any background/border from images */
img[alt*="FinClick"], img[alt*="Logo"] {
  background: transparent !important;
  backdrop-filter: none !important;
  border: none !important;
  outline: none !important;
}

/* Fix hover effects for icons and buttons - SIMPLE AND SAFE */
.hover-stable, button, .cursor-pointer, a, svg, .lucide, .lucide-react {
  transition: all 0.3s ease !important;
  opacity: 1 !important;
  visibility: visible !important;
}

.hover-stable:hover, button:hover, .cursor-pointer:hover, a:hover, svg:hover, .lucide:hover, .lucide-react:hover {
  transform: scale(1.05) !important;
  opacity: 1 !important;
  visibility: visible !important;
}

/* Ensure all interactive elements remain visible */
[role="button"], .clickable, .interactive {
  transition: all 0.3s ease !important;
  opacity: 1 !important;
  visibility: visible !important;
}

[role="button"]:hover, .clickable:hover, .interactive:hover {
  opacity: 1 !important;
  visibility: visible !important;
}

/* Simple hover effects - no forced display changes */
button, a, svg, .lucide {
  opacity: 1 !important;
  visibility: visible !important;
}

button:hover, a:hover, svg:hover, .lucide:hover {
  opacity: 1 !important;
  visibility: visible !important;
}

/* Specific fixes for header icons - CLEAN VERSION */
header button, header a, header svg, nav button, nav a, nav svg {
  opacity: 1 !important;
  visibility: visible !important;
}

header button:hover, header a:hover, header svg:hover, nav button:hover, nav a:hover, nav svg:hover {
  opacity: 1 !important;
  visibility: visible !important;
}

/* Basic icon visibility - NO forced display changes */
.lucide-home, .lucide-bar-chart-3, .lucide-building, .lucide-trending-up, .lucide-star, .lucide-credit-card, .lucide-play-circle, .lucide-phone, .lucide-bell, .lucide-search {
  opacity: 1 !important;
  visibility: visible !important;
}

.lucide-home:hover, .lucide-bar-chart-3:hover, .lucide-building:hover, .lucide-trending-up:hover, .lucide-star:hover, .lucide-credit-card:hover, .lucide-play-circle:hover, .lucide-phone:hover, .lucide-bell:hover, .lucide-search:hover {
  opacity: 1 !important;
  visibility: visible !important;
}

/* Force icon visibility - SIMPLE VERSION */
header .flex.items-center.gap-2 svg,
nav .flex.items-center.gap-2 svg {
  opacity: 1 !important;
  visibility: visible !important;
}

header .flex.items-center.gap-2:hover svg,
nav .flex.items-center.gap-2:hover svg {
  opacity: 1 !important;
  visibility: visible !important;
}

.animate-glow {
  animation: glow 3s ease-in-out infinite alternate;
}

@keyframes glow {
  from {
    text-shadow: 0 0 20px #b48500, 0 0 30px #b48500, 0 0 40px #b48500;
  }
  to {
    text-shadow: 0 0 30px #b48500, 0 0 40px #b48500, 0 0 50px #b48500;
  }
}

.neural-bg {
  background: radial-gradient(circle at 20% 50%, rgba(180, 133, 0, 0.05) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(180, 133, 0, 0.05) 0%, transparent 50%),
    radial-gradient(circle at 40% 80%, rgba(180, 133, 0, 0.05) 0%, transparent 50%);
}

.animate-marquee {
  animation: marquee 30s linear infinite;
}

@keyframes marquee {
  0% {
    transform: translateX(100%);
  }
  100% {
    transform: translateX(-100%);
  }
}

/* MINIMAL hover fix - keep icons visible */
button, a, svg, .lucide {
  opacity: 1 !important;
  visibility: visible !important;
}

button:hover, a:hover, svg:hover, .lucide:hover {
  opacity: 1 !important;
  visibility: visible !important;
}

/* Force display for interactive elements - MINIMAL */
button *, a *, [role="button"] * {
  opacity: 1 !important;
  visibility: visible !important;
}

button:hover *, a:hover *, [role="button"]:hover * {
  opacity: 1 !important;
  visibility: visible !important;
}
